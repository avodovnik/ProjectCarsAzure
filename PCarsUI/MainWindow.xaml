<Window x:Class="PCarsUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCarsUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">

    <StackPanel HorizontalAlignment="Center" Margin="10,10,10,10" VerticalAlignment="Top">
        <TextBlock Margin="10" FontSize="20">Telemetry Capture</TextBlock>
        <Button x:Name="StartCaptureButton" Margin="10" Click="StartCapture_Click">Start Capture</Button>
        <Button x:Name="StopCaptureButton" Margin="10" Click="StopCapture_Click" IsEnabled="False">Stop Capture</Button>
        <Button x:Name="ResetButton" Margin="10" Click="Reset_Click" IsEnabled="False">Reset</Button>
        <RichTextBox x:Name="consoleTextBox" Margin="10" Height="150">
            <FlowDocument>
                <Paragraph/>

            </FlowDocument>
            
        </RichTextBox>

    </StackPanel>

</Window>
